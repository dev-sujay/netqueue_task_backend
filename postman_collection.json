{
    "info": {
      "_postman_id": "your-postman-id",
      "name": "Product Filter API",
      "description": "A collection for testing the Product Filter API endpoints",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Get Products",
        "request": {
          "method": "GET",
          "header": [],
          "url": {
            "raw": "{{base_url}}/api/products?minPrice=100&maxPrice=1000&category=Watches&brand=Rolex&inStock=true&condition=Pre-Owned&search=Sky-Dweller&sort=-SalePrice&page=1&limit=10&fields=Name,SalePrice,Brand",
            "host": ["{{base_url}}"],
            "path": ["api", "products"],
            "query": [
              {
                "key": "minPrice",
                "value": "100"
              },
              {
                "key": "maxPrice",
                "value": "1000"
              },
              {
                "key": "category",
                "value": "Watches"
              },
              {
                "key": "brand",
                "value": "Rolex"
              },
              {
                "key": "inStock",
                "value": "true"
              },
              {
                "key": "condition",
                "value": "Pre-Owned"
              },
              {
                "key": "search",
                "value": "Sky-Dweller"
              },
              {
                "key": "sort",
                "value": "-SalePrice"
              },
              {
                "key": "page",
                "value": "1"
              },
              {
                "key": "limit",
                "value": "10"
              },
              {
                "key": "fields",
                "value": "Name,SalePrice,Brand"
              }
            ]
          },
          "description": "Get all products or filter products based on query parameters"
        },
        "response": []
      },
      {
        "name": "Upload CSV",
        "request": {
          "method": "POST",
          "header": [],
          "body": {
            "mode": "formdata",
            "formdata": [
              {
                "key": "csv",
                "type": "file",
                "src": "/path/to/your/csv/file.csv"
              }
            ]
          },
          "url": {
            "raw": "{{base_url}}/api/products/upload",
            "host": ["{{base_url}}"],
            "path": ["api", "products", "upload"]
          },
          "description": "Upload a CSV file to populate the database with products"
        },
        "response": []
      }
    ],
    "event": [
      {
        "listen": "prerequest",
        "script": {
          "type": "text/javascript",
          "exec": [""]
        }
      },
      {
        "listen": "test",
        "script": {
          "type": "text/javascript",
          "exec": [""]
        }
      }
    ],
    "variable": [
      {
        "key": "base_url",
        "value": "http://localhost:3000",
        "type": "string"
      }
    ]
  }
  
  